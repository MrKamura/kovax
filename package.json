{
  "name": "kovax-react",
  "publishConfig": {
    "access": "public"
  },
  "version": "0.0.6",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./components/Button": {
      "types": "./dist/components/Button/index.d.ts"
    },
    "./components/Input": {
      "types": "./dist/components/Input/index.d.ts"
    },
    "./components/Layout": {
      "types": "./dist/components/Layout/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src --format esm,cjs --dts --out-dir dist --sourcemap",
    "dev": "tsup src --format esm,cjs --dts --out-dir dist --watch",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:button": "jest src/components/Button/__tests__/Button.test.tsx"
  },
  "keywords": [
    "react",
    "ui",
    "components",
    "react-library",
    "kovax",
    "frontend",
    "typescript"
  ],
  "author": "Aleksei Alekseev",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MrKamura/kovax.git"
  },
  "peerDependencies": {
    "react": ">=16.0.0 <20.0.0",
    "react-dom": ">=16.0.0 <20.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/testing-library__jest-dom": "^6.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "ts-jest": "^29.4.5",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  }
}
